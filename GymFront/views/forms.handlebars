<div class="wrapper">
  <!----------------------------- Form box ----------------------------------->
  <div class="form-box">
    <!------------------- login form -------------------------->
    <div class="login-container" id="login">
      <div class="top">
        <span>Vous n'avez pas de compte ?
          <a href="#register">Inscrivez-vous</a></span>
        <header class="header-forms">Login</header>
      </div>
      <div class="input-box">
        <input
          type="text"
          class="input-field"
          id="LEmail"
          placeholder="Nom d'utilisateur ou courriel"
        />
        <i class="bx bx-user"></i>
      </div>
      <div class="input-box">
        <input
          type="password"
          class="input-field"
          id="LPassword"
          placeholder="Mot de passe"
        />
        <i class="bx bx-lock-alt"></i>
      </div>
      <div class="input-box">
        <button id="connexion" type="submit" class="submit">Connexion</button>
      </div>
      <div class="two-col">
        <div class="one">
          <input type="checkbox" id="login-check" />
          <label for="login-check"> Se souvenir de moi</label>
        </div>
        <div class="two">
          <label><a href="#">Mot de passe oublié ?</a></label>
        </div>
      </div>
    </div>
    <!------------------- registration form -------------------------->
    <div class="register-container" id="register">
      <div class="top">
        <span>Déjà membre?
          <a href="#login">Se connecter</a></span>
        <header class="header-forms">Connexion</header>
      </div>
      <div class="two-forms">
        <div class="input-box">
          <input
            type="text"
            class="input-field"
            id="RPrenom"
            placeholder="Prénom"
          />
          <i class="bx bx-user"></i>
        </div>
        <div class="input-box">
          <input type="text" class="input-field" id="RNom" placeholder="Nom" />
          <i class="bx bx-user"></i>
        </div>
      </div>
      <div class="input-box">
        <input
          type="text"
          class="input-field"
          id="REmail"
          placeholder="Courriel"
        />
        <i class="bx bx-envelope"></i>
      </div>
      <div class="input-box">
        <input
          type="tel"
          class="input-field"
          id="Rtel"
          placeholder="+1 873..."
        />
        <i class="bx bx-phone"></i>
      </div>
      <div class="input-box">
        <input
          type="password"
          class="input-field"
          id="RPassword"
          placeholder="Nouveau mot de passe"
        />
        <i class="bx bx-lock-alt"></i>
      </div>
      <div class="input-box">
        <input
          type="password"
          class="input-field"
          id="RcPassword"
          placeholder="Confirmer le mot de passe"
        />
        <i class="bx bx-lock-alt"></i>
      </div>
      <div class="input-box">
        <button
          id="Register"
          type="submit"
          class="submit"
        >S'enregistrer</button>
      </div>
      <div class="two-col">
        <div class="one">
          <input type="checkbox" id="register-check" />
          <label for="register-check"> Se souvenir de moi</label>
        </div>
        <div class="two">
          <label><a href="#">Terms & conditions</a></label>
        </div>
      </div>
    </div>
  </div>
</div>